/* pages/profile/profile.wxss */

/* 头像区域 */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 40rpx;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid var(--color-primary);
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-md);
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.user-level {
  font-size: 24rpx;
  color: var(--color-primary-light);
  background: rgba(139, 69, 19, 0.08);
  padding: 4rpx 20rpx;
  border-radius: var(--radius-round);
}

.login-btn {
  margin-top: 24rpx;
  font-size: 28rpx;
  padding: 16rpx 64rpx;
}

/* 统计概览 */
.stats-overview {
  padding: 32rpx 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 16rpx;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-num {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.overview-label {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

/* 菜单列表 */
.menu-card {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--color-text);
}

.menu-arrow {
  font-size: 36rpx;
  color: var(--color-text-light);
}

.menu-divider {
  height: 1rpx;
  background: var(--color-border);
  margin-left: 88rpx;
}
