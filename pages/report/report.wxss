/* pages/report/report.wxss */

/* 评分头部 */
.score-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 40rpx;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8B4513, #D2691E);
  display: flex;
  justify-content: center;
  align-items: baseline;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-lg);
}

.total-score {
  font-size: 72rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.score-max {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.score-level {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.score-date {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

/* 维度评分 */
.dimension-list {
  margin-top: 16rpx;
}

.dimension-item {
  margin-bottom: 24rpx;
}

.dimension-item:last-child {
  margin-bottom: 0;
}

.dim-name {
  font-size: 28rpx;
  color: var(--color-text);
}

.dim-score {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.progress-bar {
  height: 12rpx;
  background: #F0E6D9;
  border-radius: 6rpx;
  margin-top: 12rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.6s ease;
}

.progress-fill.good {
  background: linear-gradient(90deg, #52C41A, #73D13D);
}

.progress-fill.fair {
  background: linear-gradient(90deg, #FAAD14, #FFC53D);
}

.progress-fill.poor {
  background: linear-gradient(90deg, #FF4D4F, #FF7875);
}

/* 分析条目 */
.analysis-section {
  margin-top: 16rpx;
}

.analysis-item {
  padding: 20rpx;
  background: var(--color-bg);
  border-radius: var(--radius-md);
  margin-bottom: 16rpx;
}

.analysis-item:last-child {
  margin-bottom: 0;
}

.issue-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.issue-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

.issue-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
}

.issue-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  display: block;
  margin-bottom: 8rpx;
}

.issue-suggestion {
  font-size: 26rpx;
  color: var(--color-primary);
  line-height: 1.6;
  display: block;
}

/* 图表 */
.chart-placeholder {
  margin: 16rpx 0 24rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.report-chart {
  width: 100%;
  height: 300rpx;
  background: #FAFAFA;
}

/* AI建议 */
.advice-card {
  background: linear-gradient(135deg, #FFF8F0, #FFFFFF);
}

.advice-list {
  margin-top: 16rpx;
}

.advice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.advice-item:last-child {
  margin-bottom: 0;
}

.advice-number {
  width: 40rpx;
  height: 40rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  font-weight: 600;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.advice-text {
  font-size: 28rpx;
  color: var(--color-text);
  line-height: 1.6;
  flex: 1;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
  padding-bottom: 40rpx;
}

.action-buttons .btn-secondary,
.action-buttons .btn-primary {
  flex: 1;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: var(--color-text-secondary);
}
