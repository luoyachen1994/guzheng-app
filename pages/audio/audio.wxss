/* pages/audio/audio.wxss */

.import-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.import-actions .btn-secondary {
  flex: 1;
  font-size: 26rpx;
  padding: 16rpx 0;
}

/* 播放器 */
.player-card {
  padding: 32rpx;
}

.player-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.player-title {
  font-size: 30rpx;
  font-weight: 500;
}

.player-duration {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.progress-slider {
  margin: 16rpx 0;
}

.player-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 48rpx;
  padding-top: 16rpx;
}

.control-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

.play-btn {
  width: 96rpx;
  height: 96rpx;
  background: var(--color-primary);
  border-radius: 50%;
  font-size: 40rpx;
}

/* 音准图 */
.pitch-map {
  margin: 24rpx 0;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.pitch-canvas {
  width: 100%;
  height: 300rpx;
  background: #FAFAFA;
}

/* 指标行 */
.metrics-row {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.metric-value {
  font-size: 40rpx;
  font-weight: 700;
}

.metric-value.good {
  color: var(--color-success);
}

.metric-value.fair {
  color: var(--color-warning);
}

.metric-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: var(--color-text-secondary);
}
