/* pages/index/index.wxss */

.header {
  padding: 20rpx 0 40rpx;
}

.greeting {
  display: flex;
  align-items: baseline;
}

.greeting-text {
  font-size: 40rpx;
  color: var(--color-text-secondary);
}

.user-name {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.greeting-subtitle {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #8B4513, #D2691E);
  color: #FFFFFF;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 52rpx;
  font-weight: 700;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.85;
  margin-top: 4rpx;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 功能网格 */
.feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.feature-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  padding: 32rpx 24rpx;
  box-shadow: var(--shadow-sm);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-md);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon-text {
  font-size: 40rpx;
}

.video-icon {
  background: rgba(24, 144, 255, 0.1);
}

.audio-icon {
  background: rgba(82, 196, 26, 0.1);
}

.combined-icon {
  background: rgba(250, 173, 20, 0.1);
}

.library-icon {
  background: rgba(139, 69, 19, 0.1);
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  line-height: 1.5;
}

/* 最近练习 */
.recent-item {
  padding: 24rpx 32rpx;
}

.recent-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text);
}

.recent-meta {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-top: 6rpx;
}

.score-badge {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.score-badge.excellent {
  background: rgba(82, 196, 26, 0.1);
}

.score-badge.good {
  background: rgba(24, 144, 255, 0.1);
}

.score-badge.fair {
  background: rgba(250, 173, 20, 0.1);
}

.score-badge.poor {
  background: rgba(255, 77, 79, 0.1);
}

.score-text {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-primary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: var(--color-text-secondary);
}

.empty-hint {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-top: 8rpx;
}
