/**app.wxss**/

/* 全局样式变量 */
page {
  --color-primary: #8B4513;
  --color-primary-light: #D2691E;
  --color-primary-dark: #5C2E0A;
  --color-bg: #FFF8F0;
  --color-bg-card: #FFFFFF;
  --color-text: #333333;
  --color-text-secondary: #888888;
  --color-text-light: #BBBBBB;
  --color-success: #52C41A;
  --color-warning: #FAAD14;
  --color-error: #FF4D4F;
  --color-border: #F0E6D9;

  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-round: 999rpx;

  --shadow-sm: 0 2rpx 8rpx rgba(139, 69, 19, 0.08);
  --shadow-md: 0 4rpx 16rpx rgba(139, 69, 19, 0.12);
  --shadow-lg: 0 8rpx 32rpx rgba(139, 69, 19, 0.16);

  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue',
    'PingFang SC', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  color: var(--color-text);
  background-color: var(--color-bg);
  box-sizing: border-box;
}

/* 通用布局 */
.container {
  padding: 24rpx 32rpx;
  min-height: 100vh;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 通用卡片 */
.card {
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
  color: #FFFFFF;
  border: none;
  border-radius: var(--radius-round);
  padding: 20rpx 48rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  line-height: 1.5;
}

.btn-primary::after {
  border: none;
}

.btn-secondary {
  background: var(--color-bg);
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  border-radius: var(--radius-round);
  padding: 18rpx 48rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  line-height: 1.5;
}

.btn-secondary::after {
  border: none;
}

/* 标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 24rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 16rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: var(--color-border);
  margin: 24rpx 0;
}

/* 安全底部 */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
